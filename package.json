{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm with-env turbo run build",
    "dev": "pnpm with-env turbo dev --parallel",
    "clean": "rm -rf .turbo .next node_modules dist coverage",
    "lint": "turbo run lint",
    "start": "pnpm with-env turbo run start",
    "db": "pnpm with-env turbo db:push db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "with-env": "dotenv -e .env --"
  },
  "devDependencies": {
    "@ic/eslint-config-indie": "workspace:*",
    "@ic/tsconfig": "workspace:*",
    "@types/node": "^18.11.18",
    "dotenv-cli": "^7.0.0",
    "prettier": "latest",
    "prettier-plugin-prisma": "^4.10.0",
    "turbo": "latest",
    "typescript": "^4.9.4"
  }
}
